<%= render 'standard/show_parent' if @parent_instance %>

<h1><%= @model.collection_rendering_name %></h1>
<% container_id = [@parent_instance&.class&.name, @parent_instance&.id, @model.collection_name].compact.join('_') %>
<div id='<%= container_id %>' class='container' >
	<%= render 'standard/index_table', collection: @collection, model: @model, parent_instance: @parent_instance, collection_total_count: @collection_total_count, remote: @remote,  container_id: container_id, as: :collection %>
</div>
<br>

<%= link_to "New #{@model.instance_name}", [:new, @parent_instance, @model.instance_name], remote: @remote, class:  "btn btn-info" %>
